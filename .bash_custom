# Custom Prompt
PS1='${debian_chroot:+($debian_chroot)}\[\e[32;1m\]→ \[\e[0;36m\]\u@\h\[\e[0m\] \w » '

# Aliases

alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'
alias ll='ls -lAFh'
alias la='ls -A'
alias l='ls -CF'
alias less='less -FSRXc'

alias cls='clear'

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias .......="cd ../../../../../.."
alias ........="cd ../../../../../../.."
alias .........="cd ../../../../../../../.."
alias ..........="cd ../../../../../../../../.."
alias ...........="cd ../../../../../../../../../.."
alias ............="cd ../../../../../../../../../../.."
alias .............="cd ../../../../../../../../../../../.."
